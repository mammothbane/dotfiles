#!/usr/bin/env bash

set -euo pipefail

app=''

if [[ "${1:-}" == "g*" ]]; then
  app='graphical'
fi

export NIXPKGS_ALLOW_UNFREE=1

exec nix-shell \
    -I nixpkgs=https://github.com/nixos/nixpkgs/archive/release-20.09.tar.gz \
    -p nixUnstable \
    --run 'nix --experimental-features "nix-command flakes" run github:mammothbane/dotfiles --impure'
